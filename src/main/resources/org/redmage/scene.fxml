<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<?import javafx.scene.control.Button?>
<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.redmage.FXMLController" alignment="CENTER">
    <children>
        <ImageView fx:id="starField">
            <image>
                <Image url="@images/2k_stars_milky_way.jpg" />
            </image>
        </ImageView>

        <SubScene fx:id="subScene" width="2560" height="720" depthBuffer="true">
            <root>
                <Group fx:id="earthGroup">
                    <children>
                        <Sphere id="Earth" fx:id="earth" radius="250" rotate="-23.5" layoutX="0" layoutY="0"/>
                        <Group fx:id="moonGroup" rotate="5.14">
                            <children>
                                <Sphere id="Moon" fx:id="moon" radius="50" rotate="6.68"/>
                            </children>
                        </Group>
                        <Group fx:id="cameraTravelGroup">
                            <children>
                                <PerspectiveCamera fx:id="camera"/>
                            </children>
                        </Group>

                    </children>
                </Group>

            </root>
        </SubScene>

        <BorderPane>
            <bottom>
                <HBox>
                    <Button fx:id="fullscreenButton" text="Fullscreen Mode"/>
                    <VBox>
                        <Button fx:id="rotateCameraButton" text="Rotate Camera"/>
                        <Button fx:id="reverseAnimationButton" text="Reverse"/>
                    </VBox>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
